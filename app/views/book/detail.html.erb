<main>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="p-3">
          <div>
            <h1>User info</h1></br>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image_user.jpg" %>
          </div>
          <div class="border-top" style="padding:10px;">
            <strong>name</strong>
            <strong> <%= current_user.name %></strong>
          </div>
          <div class="border-top" style="padding:10px;">
            <h5>introduction</h5></br>

          </div>
        </div>

        <a type="button" class="btn w-100 btn-secondary" href="/users/:id/edit">
          <i class="fas fa-user-cog"></i>
        </a>

        <div class="p-3">
          <h1>New book</h1>
          <%= form_with model: @book, url: book_index_path, local:true do |f| %>
            <div class="field">
              <p>Title</p>
              <%= f.text_field :title %>
            </div>
            <div class="field">
              <p>Opinion</p>
              <%= f.text_area :body %></br>
            </div>
            <div class="actions">
              <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-8">
        <h1>Book detail</h1>
        <table class="table">
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <div>
                    <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image_user.jpg" %></br>
                    <a href="book/detail"><%= current_user.name %></a>
                  </div>
                </td>
                <td><a href="book/detail"><%= book.title %></a></td>
                <td><%= book.body %></td>
                <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure?"} %></td>
                <!--edit_book_path(@book)-->
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
