<main>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <%= render 'book/list', book: @book %>
      <div class="col-md-8">
        <h1>Books</h1>
        <table class="table">
          <thead>
            <tr>
              <th colspan="1"></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image_user.jpg" %></td>
                <td><%= link_to book.title, book_detail_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>